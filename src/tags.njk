---
layout: "base"
---

<h1>All Tags</h1>

<section>
  {% for tag, posts in collections | dictsort %}
    {% if tag !== "posts" %}
      <span>
        <a href="/tags/{{ tag | slug }}">{{ tag }}</a>
        <span
        {% set c = posts.length %}
        {% if c > 40 %}
          bg-gray-600 text-white
        {% elif c > 30 %}
          bg-gray-500 text-white
        {% elif c > 20 %}
          bg-gray-400
        {% elif c > 10 %}
          bg-gray-200
        {% else %}
          bg-gray-100
        {% endif %}
        ">{{c}}</span>
      </span>
    {% endif %}
  {% endfor %}
</section>
